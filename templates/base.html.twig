<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            <!-- Compiled and minified CSS -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <!-- Dropdown Structure -->
        <div class="container">
            <nav class="transparent z-depth-0">
                <div class="nav-wrapper">
                    <div class="row">
                        <div class="col s4">
                            <a href="#" data-activates="mobile-demo" class="button-collapses"><i class="material-icons pink-text text-lighten-2">menu</i></a>
                        </div>
                        <div class="col s4">
                            <a href="/" class="brand-logo center"><img src="{{ asset('pictures/logo-symediane.png') }}" alt="logo-symediane"></a>
                        </div>
                        <div class="col s4">
                            <a href="http://www.symediane.com/" class="right"><img src="{{ asset('pictures/lien-symediane.png') }}" alt="lien"></a>
                        </div>
                    </div>
                    <div class="side-nav" id="mobile-demo">
                        <ul class="collapsible" data-collapsible="accordion">
                          <li>
                            <div class="collapsible-header">First<i class="material-icons nav-bar-arrow"></i></div>
                            <div class="collapsible-body"><a href="/recap">Historique de commande</a></div>
                          </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        {% block body %}
        {% endblock %}
        <!-- Compiled and minified JavaScript -->
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script>
            $(document).ready(function(){
                $(".button-collapses").sideNav();
                $(".collapsible").collapsible({
                  onOpen: function(el) {
                    $(".nav-bar-arrow").text('arrow_drop_up');
                  },
                  onClose: function(el) {
                    $(".nav-bar-arrow").text('arrow_drop_down');
                  }
                });
            });
        </script>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
